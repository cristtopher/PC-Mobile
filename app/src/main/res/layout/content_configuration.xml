<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_configuration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorDark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.axxezo.MobileReader.Configuration"
    tools:showIn="@layout/activity_configuration">


    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Rutas"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_marginTop="40dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_marginTop="35dp"
        android:layout_height="40dp"
        android:layout_marginLeft="150dp"
        android:background="@android:color/darker_gray"
        android:layout_width="400dp"
        android:spinnerMode="dialog" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Puertos"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_marginTop="110dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_ports"
        android:layout_marginTop="105dp"
        android:layout_height="40dp"
        android:layout_marginLeft="150dp"
        android:background="@android:color/darker_gray"
        android:layout_width="400dp"
        android:spinnerMode="dialog" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Naves"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_marginTop="180dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_ship"
        android:layout_marginTop="175dp"
        android:layout_height="40dp"
        android:layout_marginLeft="150dp"
        android:background="@android:color/darker_gray"
        android:layout_width="400dp"
        android:spinnerMode="dialog" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="Horarios"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_marginTop="250dp"
        android:textSize="24sp"
        android:textStyle="bold" />
    <Spinner
        android:id="@+id/spinner_hours"
        android:layout_marginTop="245dp"
        android:layout_height="40dp"
        android:layout_marginLeft="150dp"
        android:background="@android:color/darker_gray"
        android:layout_width="400dp"
        android:spinnerMode="dialog" />

    <Button
        android:text="Cargar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:layout_marginLeft="110dp"
        android:id="@+id/button_loadManifest"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
